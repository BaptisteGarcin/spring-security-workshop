import LoginComponent from '../login/login'
import CommentsComponent from '../comment/comment';
import HomeComponent from '../home';

export default function router($stateProvider, $urlRouterProvider) {


  const login = {
    name: "home.login",
    state: {
      url: "/login",
      views: {
        'main@home': {
          component: LoginComponent.name
        }
      }
    }
  };

  const home = {
    name: "home",
    state: {
      views: {
        'main@': {
          component: HomeComponent.name
        },
      }
    }
  };
  const comments = {
    name: "home.comments",
    state: {
      url: "/comments",
      views: {
        'main@home': {
          component: CommentsComponent.name
        }
      }
    }
  };

  $urlRouterProvider.otherwise("/login");

  $stateProvider
    .state(home.name, home.state)
    .state(login.name, login.state)
    .state(comments.name, comments.state)

}